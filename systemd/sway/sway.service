[Unit]
Description=sway - SirCmpwn's Wayland window manager
Documentation=man:sway(5)

[Service]
Type=simple
ExecStartPre=systemctl --user unset-environment WAYLAND_DISPLAY DISPLAY

ExecStart=bash -c 'cat ~/.config/sway/args | xargs /usr/bin/sway > ~/.logs/sway.latest.log 2>&1'

Restart=on-failure
RestartSec=1
TimeoutStopSec=10
